<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-center">
        <br>
        </br>
        <br>
        <h2>Log in</h2>
        </br>
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "btn btn-lg", autofocus: true, autocomplete: "email" %>
      </div>

      <br>

      <div class="field text-center">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "btn btn-lg", autocomplete: "current-password" %>
      </div>
      
      <br>

    <% if devise_mapping.rememberable? %>
      <div class="field text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <br>

    <div class="actions text-center text-center">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

